@model TechShop.Models.TChatLieu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Tạo mới chất liệu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaChatLieu" class="control-label"></label>
                <input asp-for="MaChatLieu" class="form-control" />
                <span asp-validation-for="MaChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenChatLieu" class="control-label"></label>
                <input asp-for="TenChatLieu" class="form-control" />
                <span asp-validation-for="TenChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="tquanlichatlieu" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
